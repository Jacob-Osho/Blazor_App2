@if (ListrOfGames is null)
{
    <div class="row text-center">
        <div class="col">
            <img src="https://i.makeagif.com/media/8-23-2019/EngHSH.gif" alt="noList" height="500" />
        </div>
    </div>
}
else if(ListrOfGames.Count==0)
{
    <div class="row text-center">
        <div class="col">
            <img src="https://media2.giphy.com/media/l2JehQ2GitHGdVG9y/giphy.gif" alt="no files in list" height="500" />
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach(var iteam in ListrOfGames)
        {
            <IndividualGame Game="iteam" OnDeleteGame="DeleteGame" />
        }
    </div>
}

@code {
    [Parameter] public List<GameModel> ListrOfGames { get; set; }

    void DeleteGame(GameModel game)
    {
        ListrOfGames.Remove(game);
    }
}
